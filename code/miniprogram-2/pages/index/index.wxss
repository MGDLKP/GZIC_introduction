/* 页面样式 */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/* 背景图片样式 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 按钮样式 */
.navigate-button {
  padding: 12px 24px;
  top: 360px;
  font-size: 16px;
  border: none;
  border-radius: 8px;
  background-color: #007aff;
  color: #ffffff;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  
}
