/* camera.wxss */
.camera-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  widows: 100vh;
  background-color: black;
}

.top-bar, .bottom-bar {
  width: 90%;
  background-color: black;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}

.top-bar {
  height: 60px;
  padding: 10px;
}

.bottom-bar {
  height: 80px;
  padding: 0 5%;
}

.camera-view {
  flex: 1;
  width: 100%;
  background-color: rgb(23, 124, 150);
}

.icon_flash {
  /* left: 5%; */
  width: 30px;
  height: 30px;
}

.icon_camera{
  /* right: 5%; */
  width: 40px;
  height: 40px;
}

.capture-button {
  width: 60px;
  height: 60px;
  background-color: white;
  border-radius: 50%;
  margin: 0 20px;
}
